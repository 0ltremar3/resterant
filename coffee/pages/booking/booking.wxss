/* 样式可能需要根据实际效果进行调整 */
.booking-container {
  padding: 20px;
}

.date-scroll {
  white-space: nowrap;
  overflow-x: scroll;
  border-bottom: 1px solid #ccc;
  padding: 10px 0;
}

.date-item {
  display: inline-block;
  width: 60px;
  margin: 0 5px;
  text-align: center;
}

.date-week {
  font-size: 14px;
}

.date-day {
  font-size: 18px;
  font-weight: bold;
}

/* 选中日期的周和日的样式 */
.selected {
  color: green; /* 这将使文本颜色变为绿色 */
}

.timeslot-container {
  margin-top: 20px;
}

.timeslot {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-bottom: 10px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 10px;
}

/* 时间显示样式 */
.time {
  font-size: 18px;
  font-weight: bold;
  margin-right: auto;
}

/* 座位选择样式 */
.seats {
  background-color: white;
  padding: 5px 10px;
  border: 2px solid #ddd; /* 边框颜色 */
  border-radius: 5px; /* 边角的圆滑度 */
  margin-left: 16px;
}

/* 选中座位的样式 */
.seats.selected {
  color: #fff; /* 字体颜色 */
  background-color: green; /* 背景颜色，选中时的颜色 */
  border-color: green; /* 边框颜色和背景颜色相同 */
}

.reminder-text {
  margin: 10px 0;
  padding: 10px;
  color: green;
  font-size: 16px;
}

.contact-info {
  margin-top: 20px;
}

.input {
  display: flex;
  padding: 10px;
  margin-bottom: 10px;
  border: 1px solid #ccc;
  border-radius: 6px;
}

.submit-btn {
  display: block;
  width: 100%;
  background-color: black;
  color: white;
  padding: 10px;
  text-align: center;
  border-radius: 32px;
}

  